<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <h1><%= question.title %></h1>
        <br>
        <p><%= question.description %></p>
        <hr>

        <form method="POST" action="/answer">
            <h3>Answer the question</h3>
            <label>Answer:</label>
            <textarea placeholder="Enter your answer here" name="answerBody" class="form-control" cols="30" rows="5"></textarea>
            <br>
            <input type="hidden" name="questionId" value="<%= question.id %>">
            <button type="submit" class="btn btn-primary">Answer</button>
        </form>

        <hr>
        <h3>Answers</h3>
        <br>
        <% if(answers.length === 0) { %>
            <h5>There are no answers for this question</h5>
        <% } else { %>
            <% answers.forEach(answer => { %>
                <div class="card">
                    <div class="card-body">
                        <p> <%= answer.body %></p>
                    </div>
                    <div class="card-footer">
                        <p> <%= new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'long', day: '2-digit', hour: '2-digit', minute: '2-digit'}).format(answer.createdAt) %></p>
                    </div>
                </div>
                <br>
            <% }) %>
        <% } %>
    </div>
    
</body>
<%- include('partials/footer') %>